{
  "name": "pws-backend",
  "version": "1.0.0",
  "private": true,
  "type": "module",
  "description": "Patient Workflow System - Express API",
  "engines": {
    "node": ">=20.0.0"
  },
  "scripts": {
    "dev": "tsx watch src/server.ts",
    "start": "node --enable-source-maps dist/server.js",
    "build": "tsc -p tsconfig.prod.json",
    "lint": "eslint ./src --ext .ts",
    "prisma:generate": "prisma generate",
    "prisma:migrate:dev": "prisma migrate dev",
    "prisma:migrate:deploy": "prisma migrate deploy",
    "prisma:seed": "prisma db seed",
    "swagger:check": "node -e \"console.log('Swagger served from /docs')\""
  },
  "prisma": {
    "seed": "tsx prisma/seed.ts"
  },
  "dependencies": {
    "@prisma/client": "5.22.0",
    "bcryptjs": "2.4.3",
    "cors": "2.8.5",
    "dotenv": "16.6.1",
    "express": "4.21.2",
    "helmet": "7.2.0",
    "jsonwebtoken": "9.0.2",
    "pino": "9.10.0",
    "pino-http": "10.5.0",
    "prisma": "5.22.0",
    "swagger-ui-express": "5.0.1",
    "yamljs": "0.3.0",
    "zod": "3.25.76"
  },
  "devDependencies": {
    "@types/bcryptjs": "2.4.6",
    "@types/cors": "2.8.19",
    "@types/express": "4.17.23",
    "@types/jsonwebtoken": "9.0.10",
    "@types/node": "22.18.6",
    "eslint": "9.13.0",
    "tsx": "4.20.5",
    "typescript": "5.5.4",
    "vitest": "2.1.3"
  }
}
